<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_gravity="bottom"
    tools:context=".ui.LectureInfoFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etLectureAssignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:drawableStart="@drawable/ic_link"
            android:layout_margin="5dp"
            android:drawablePadding="3dp"
            android:padding="15dp"
            android:hint="Enter Assigment Link"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitAssignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_upload_file"
            android:text="Submit Assigment"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg"
            android:layout_margin="5dp"
            android:drawableTint="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnWatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_watch"
                android:text="Watch"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg"
                android:layout_margin="2dp"
                android:drawableTint="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSeeDocs"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_open_file"
                android:text="See Documents"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg"
                android:layout_margin="2dp"
                android:drawableTint="@color/white" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>